@{
    ViewData["Title"] = "Home Page";
}
@model List<Crowdfund.Core.Model.Project>

<h1 class="text-center">Trending Projects</h1>
<hr />
<div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-ride="carousel">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count(); i++)
        {
            @for (int y = 0; y < Model[i].Media.Count(); y++)
            {
                if (!Model[i].Media[y].MediaUrl.Contains("youtube"))// Video should not be carouseled
                {
                    if (i == 0) //starting slide
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                        break;
                    }
                    else
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                        break;
                    }
                }
            }
        }

    </ol>
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count(); i++)
        {
            @for (int y = 0; y < Model[i].Media.Count(); y++)
            {
                if (!Model[i].Media[y].MediaUrl.Contains("youtube")) //Video should not be carouseled
                {
                    if (i == 0)//starting slide
                    {
                        <div class="carousel-item active">
                            <img src="@Model[i].Media[y].MediaUrl" class="d-block w-100" alt="Oops">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@Model[i].Title</h5>
                                <p>
                                    <a href="@Url.Action("Details", "Project", new { id = Model[i].ProjectId })" class="btn btn-light"><i class="fa fa-bars"></i> Details</a>
                                </p>
                            </div>
                        </div>
                        break;
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="@Model[i].Media[y].MediaUrl" class="d-block w-100" alt="Oops">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@Model[i].Title</h5>
                                <p>
                                    <a href="@Url.Action("Details", "Project", new { id = Model[i].ProjectId })" class="btn btn-light"><i class="fa fa-bars"></i> Details</a>
                                </p>
                            </div>
                        </div>
                        break;
                    }
                }
            }

        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<hr />
<div class="jumbotron text-center">
    <h1 class="display-4">Fundraising for out of the box ideas!</h1>
    <hr class="my-4">
    <p>Get started right away!</p>
    <p class="lead">
        <a href="/Project/Index" class="btn btn-primary my-2"><i class="fa fa-eye"></i> Browse Projects</a>
        <a href="/Project/Create" class="btn btn-secondary my-2"><i class="fa fa-plus"></i> Create project</a>
        <!--<a href="/user/index" class="btn btn-secondary my-2">Browse Users</a>-->
    </p>
</div>