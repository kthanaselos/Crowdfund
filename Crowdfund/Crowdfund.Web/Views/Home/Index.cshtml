@model List<Crowdfund.Core.Model.Project>
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    
    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">
    <title>Album example for Bootstrap</title>
    

    <!-- Bootstrap core CSS -->
    

    <!-- Custom styles for this template -->
    
</head>

<body style="background: #d8d8d8;">

    <header>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </header>

    <div class="row">
        
            <section class="jumbotron text-center">
                <div class="row">
                    <h1 class="jumbotron-heading">Welcome to our Home Page</h1>
                    <p class="lead text-muted">This is a CRM sytem with projects a packages and Users.</p>
                    <p>
                        <a href="/Project/Index" class="btn btn-primary my-2">Projects Page</a>
                        <a href="/user/index" class="btn btn-secondary my-2">Users Page</a>
                    </p>
                </div>
            </section>

            <div class="album py-5 bg-light">
                <div class="container">

                    <div class="row">
                        @foreach (var project in Model)
                        {
                            <div class="col-md-4">
                                <div class="card mb-4 box-shadow" style=" height: 143px;">
                                    <b style="margin-left:18px;">
                                        @( !String.IsNullOrWhiteSpace(project.Description) && project.Description.Length >= 20
                                            ? project.Description.Substring(0, 20) + " ..."
                                            : project.Description )
                                    </b>
                                    <div class="card-body">
                                        <p class="card-text">
                                            @(!String.IsNullOrWhiteSpace(project.Description) && project.Description.Length >= 40
                                            ? project.Description.Substring(0, 40) + " ..."
                                            : project.Description)
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                @*<button type="button" class="btn btn-sm btn-outline-secondary">View</button>*@

                                                <a href="@Url.Action("Details", "Project", new { id = project.ProjectId })" class="btn btn-primary" style="margin-top: 36px; margin-right: auto;">View</a>
                                                @*<a href="@Url.Action("Details", "Project", new { id = project.ProjectId })" class="btn btn-sm btn-outline-secondary">View</a>*@
                                                @*<button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>*@
                                            </div>
                                            @*<small class="text-muted">9 mins</small>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>          

    </div> 
  


    @*<footer class="text-muted">
        <div class="container">
            <p class="float-right">
                <a href="#">Back to top</a>
            </p>
            <p>Tiny Crm &copy; For .net acad!</p>
            <p>New to Bootstrap? <a href="../../">Visit the homepage</a> or read our <a href="../../getting-started/">getting started guide</a>.</p>
        </div>
    </footer>*@

</body>
</html>
