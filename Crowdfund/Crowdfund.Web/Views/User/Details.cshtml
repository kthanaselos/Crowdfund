
@{
    ViewData["Title"] = "Details";
}
@model Crowdfund.Core.Model.User

@if (Model == null)
{
    <div class="alert alert-warning" role="alert">
        User not found
    </div>
    return;
}

<div class="card">
    <h2 class="card-header">User Details</h2>
    <div class="card-body">
        <h5 class="card-title">Name: @Model.FirstName @Model.LastName</h5>
        <p class="card-text">Email: @Model.Email</p>
        <p class="card-text">Is a Creator: @Model.IsProjectCreator</p>
        <a class="btn btn-primary" href="@Url.Action("Edit", "User", new {id = Model.UserId })">Edit</a>
    </div>
</div>

<div class="card">
    <h2 class="card-header">User Projects</h2>
    <div class="card-body">
        <div class="container">
            <div class="row">
                @foreach (var project in Model.Projects)
                {
                    <div class="col-sm-6 col-lg-4 mb-3">
                        <div class="card mb-3 h-100">
                            <img src="@project.Media[0].MediaUrl" class="card-img-top" alt="oops">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@project.Title</h5>
                                <p class="card-text">
                                    @(!String.IsNullOrWhiteSpace(project.Description) && project.Description.Length >= 100
                    ? project.Description.Substring(0, 100) + " ..."
                    : project.Description)
                                </p>

                                <a href="@Url.Action("Details", "Project", new { id = project.ProjectId })" class="btn btn-primary" style="margin-top: auto; margin-right: auto;">Go to project</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>