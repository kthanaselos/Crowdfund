
@{
    ViewData["Title"] = "Edit";
}
@model Crowdfund.Core.Model.User

<form method="post">
    <h2>Edit info</h2>
    <div class="form-group">
        <label for="InputFirstName">First Name</label>
        <input type="text" value="@Model.FirstName" class="form-control" name="FirstName">
        <label for="InputLastName">Last Name</label>
        <input type="text" value="@Model.LastName" class="form-control" name="LastName">
        <label for="InputEmail">Email address</label>
        <input type="email" value="@Model.Email" class="form-control" name="Email" aria-describedby="emailHelp">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

