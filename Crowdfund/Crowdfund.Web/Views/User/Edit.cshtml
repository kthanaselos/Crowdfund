
@{
    ViewData["Title"] = "Edit";
}
@model Crowdfund.Core.Model.User

<form>
    <h2>Edit info</h2>
    <div class="form-group">
        <label name="UserId" id="UserId" hidden>@Model.UserId</label>
        <label for="InputFirstName">First Name</label>
        <input type="text" id="FirstName" value="@Model.FirstName" class="form-control" name="FirstName">
        <label for="InputLastName">Last Name</label>
        <input type="text" id="LastName" value="@Model.LastName" class="form-control" name="LastName">
        <label for="InputEmail">Email address</label>
        <input type="email" id="Email" value="@Model.Email" class="form-control" name="Email" aria-describedby="emailHelp">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <button type="button" class="btn btn-primary" onclick="editUser()"><i class="fa fa-floppy-o"></i> Save</button>

    <div class="alert alert-success js-success-alert" role="alert">
        <i class="fa fa-check"></i> User was updated successfully!
    </div>

    <div class="alert alert-danger js-fail-alert" role="alert">
        <i class="fa fa-exclamation-triangle"></i> User could not be updated!
    </div>
</form>

