
@{
    ViewData["Title"] = "Index";
}
@model List<Crowdfund.Core.Model.User>

<h2 class="display-4">Users</h2>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Has Projects</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <th scope="row">@u.UserId</th>
                <td>@u.FirstName</td>
                <td>@u.LastName</td>
                <td>@u.Email</td>
                <td>@u.IsProjectCreator</td>
                <td><a class="nav-link" href="@Url.Action("Details", "User", new {id = u.UserId })">Details</a></td>
            </tr>
        }
    </tbody>
</table>
<h5>Total Customers: @Model.Count()</h5>

